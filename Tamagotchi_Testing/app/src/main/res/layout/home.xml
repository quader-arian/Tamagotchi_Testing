<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/background"
    android:background="#FFF2FA"
    android:orientation = "vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/titleImage"
                android:layout_width="239dp"
                android:layout_height="202dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/bunny" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/namefield"
                android:layout_weight="0"
                android:fontFamily="monospace"
                android:hapticFeedbackEnabled="true"
                android:hint="Tap To Enter Subject Name"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHint="#1C1C1C"
                android:textStyle="bold"
                android:typeface="monospace"
                tools:text="Tap To Enter Name">

            </EditText>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/radial_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="false"
                android:background="#00FFFFFF"
                android:contextClickable="true"
                android:hapticFeedbackEnabled="true"
                android:onClick="click"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:scaleType="fitCenter"
                android:scaleX=".7"
                android:scaleY=".7"
                app:srcCompat="@drawable/radial_heading" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/drag_drop_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="false"
                android:background="#00FFFFFF"
                android:contextClickable="true"
                android:hapticFeedbackEnabled="true"
                android:onClick="click"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/drag_drop_heading" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/linear_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="false"
                android:background="#00FFFFFF"
                android:contextClickable="true"
                android:hapticFeedbackEnabled="true"
                android:onClick="click"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:scaleType="fitCenter"
                android:scaleX="0.7"
                android:scaleY=".7"
                app:srcCompat="@drawable/linear_heading" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/stats1_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#00FFFFFF"
                android:contextClickable="true"
                android:hapticFeedbackEnabled="true"
                android:onClick="click"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:scaleType="fitCenter"
                android:scaleX="0.7"
                android:scaleY="0.7"
                app:srcCompat="@drawable/stats1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageButton
                android:id="@+id/stats2_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#00FFFFFF"
                android:contextClickable="true"
                android:hapticFeedbackEnabled="true"
                android:onClick="click"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/stats2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/stats3_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#00FFFFFF"
                android:contextClickable="true"
                android:hapticFeedbackEnabled="true"
                android:onClick="click"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:scaleType="fitCenter"
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:srcCompat="@drawable/stats3" />

        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>