<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="563dp"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70px">

                <ImageView
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="center" />
            </FrameLayout>



            <LinearLayout
                android:id="@+id/submenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/subitem1"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:foreground="@drawable/icon1_1" />

                <ImageButton
                    android:id="@+id/subitem2"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:foreground="@drawable/icon1_2" />

                <ImageButton
                    android:id="@+id/subitem3"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:foreground="@drawable/icon1_3" />

                <ImageButton
                    android:id="@+id/subitem4"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:foreground="@drawable/icon1_4" />

                <ImageButton
                    android:id="@+id/subitem5"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:foreground="@drawable/icon1_5" />

                <ImageButton
                    android:id="@+id/subitem6"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:foreground="@drawable/icon1_6" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mainmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/submenu"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/mainitem1"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:foreground="@drawable/icon1" />

                <ImageButton
                    android:id="@+id/mainitem2"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:foreground="@drawable/icon2" />

                <ImageButton
                    android:id="@+id/mainitem3"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:foreground="@drawable/icon3" />

                <ImageButton
                    android:id="@+id/mainitem4"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:foreground="@drawable/icon4" />

                <ImageButton
                    android:id="@+id/mainitem5"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:foreground="@drawable/icon5" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>