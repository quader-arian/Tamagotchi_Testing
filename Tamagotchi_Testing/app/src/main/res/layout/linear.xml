<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF2FA">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/heading"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:scaleType="center" />
        <ImageView
            android:id="@+id/subheading"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:scaleType="center" />
        </LinearLayout>

        <ImageView
            android:id="@+id/bunny"
            android:foreground="@drawable/bunny"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:paddingTop="1000dp"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="563dp"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/submenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/subitem1"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_gravity="center"
                    android:background="@drawable/pink_square"
                    android:foreground="@drawable/icon1_1"
                    android:padding="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" />

                <ImageButton
                    android:id="@+id/subitem2"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_gravity="center"
                    android:background="@drawable/pink_square"
                    android:foreground="@drawable/icon1_2"
                    android:padding="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" />

                <ImageButton
                    android:id="@+id/subitem3"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_gravity="center"
                    android:background="@drawable/pink_square"
                    android:foreground="@drawable/icon1_3"
                    android:padding="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" />

                <ImageButton
                    android:id="@+id/subitem4"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_gravity="center"
                    android:background="@drawable/pink_square"
                    android:foreground="@drawable/icon1_4"
                    android:padding="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" />

                <ImageButton
                    android:id="@+id/subitem5"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_gravity="center"
                    android:background="@drawable/pink_square"
                    android:foreground="@drawable/icon1_5"
                    android:padding="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" />

                <ImageButton
                    android:id="@+id/subitem6"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_gravity="center"
                    android:background="@drawable/pink_square"
                    android:foreground="@drawable/icon1_6"
                    android:padding="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mainmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/submenu"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/mainitem1"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_gravity="center"
                    android:background="@drawable/pink_square"
                    android:foreground="@drawable/icon1"
                    android:padding="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" />

                <ImageButton
                    android:id="@+id/mainitem2"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_gravity="center"
                    android:background="@drawable/pink_square"
                    android:foreground="@drawable/icon2"
                    android:padding="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" />

                <ImageButton
                    android:id="@+id/mainitem3"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_gravity="center"
                    android:background="@drawable/pink_square"
                    android:foreground="@drawable/icon3"
                    android:padding="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" />

                <ImageButton
                    android:id="@+id/mainitem4"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_gravity="center"
                    android:background="@drawable/pink_square"
                    android:foreground="@drawable/icon4"
                    android:padding="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" />

                <ImageButton
                    android:id="@+id/mainitem5"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_gravity="center"
                    android:background="@drawable/pink_square"
                    android:foreground="@drawable/icon5"
                    android:padding="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:paddingTop="100dp">
        <ImageView
        android:id="@+id/from"
        android:layout_width="52dp"
        android:layout_height="49dp"
        android:layout_marginStart="32dp" />
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="52dp"
            android:layout_height="49dp"
            android:foreground="@drawable/arrow_right" />
        <ImageView
        android:id="@+id/to"
        android:layout_width="52dp"
        android:layout_height="49dp" />
    </LinearLayout>
    <TextView
        android:layout_gravity="right"
        android:id="@+id/fps"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="TextView" />

</FrameLayout>