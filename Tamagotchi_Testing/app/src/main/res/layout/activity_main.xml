<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/background"
    android:background="#FFF2FA"
    android:orientation = "vertical">

    <ImageView
        android:id="@+id/icon1Heading"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/innerCircle"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182"
        app:srcCompat="@drawable/icon1_heading" />

    <ImageView
        android:id="@+id/icon2Heading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/innerCircle"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182"
        app:srcCompat="@drawable/icon2_heading" />

    <ImageView
        android:id="@+id/icon3Heading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/innerCircle"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182"
        app:srcCompat="@drawable/icon3_heading" />

    <ImageView
        android:id="@+id/icon4Heading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/innerCircle"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182"
        app:srcCompat="@drawable/icon4_heading" />

    <ImageView
        android:id="@+id/icon5Heading"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/innerCircle"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182"
        app:srcCompat="@drawable/icon5_heading" />

    <ImageView
        android:id="@+id/icon6Heading"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/innerCircle"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182"
        app:srcCompat="@drawable/icon6_heading" />

    <ImageView
        android:id="@+id/outerCircle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="visible"
        android:layout_centerInParent="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/img" />


    <ImageView
        android:id="@+id/innerCircle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        app:srcCompat="@drawable/innercircle" />

    <ImageButton
        android:id="@+id/centralButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="true"
        android:focusable="true"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/img_2"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:id="@+id/icon1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_above="@id/bunny"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/centralButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/outerCircle"
        app:layout_constraintVertical_bias="0.152"
        app:srcCompat="@drawable/icon1" />

    <ImageButton
        android:id="@+id/icon2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_above="@id/bunny"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/centralButton"
        app:layout_constraintHorizontal_bias="0.924"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/outerCircle"
        app:layout_constraintTop_toTopOf="@id/outerCircle"
        app:layout_constraintVertical_bias="0.48"
        app:srcCompat="@drawable/icon2" />

    <ImageButton
        android:id="@+id/icon3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_above="@id/bunny"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/outerCircle"
        app:layout_constraintHorizontal_bias="0.924"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/outerCircle"
        app:layout_constraintTop_toTopOf="@id/centralButton"
        app:layout_constraintVertical_bias="0.54"
        app:srcCompat="@drawable/icon3" />

    <ImageButton
        android:id="@+id/icon4"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_above="@id/bunny"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/outerCircle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/centralButton"
        app:layout_constraintVertical_bias="0.838"
        app:srcCompat="@drawable/icon4" />

    <ImageButton
        android:id="@+id/icon5"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_above="@id/bunny"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/outerCircle"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="@id/outerCircle"
        app:layout_constraintRight_toRightOf="@id/centralButton"
        app:layout_constraintTop_toTopOf="@id/centralButton"
        app:layout_constraintVertical_bias="0.51"
        app:srcCompat="@drawable/icon5" />

    <ImageButton
        android:id="@+id/icon6"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_above="@id/bunny"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/centralButton"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="@id/outerCircle"
        app:layout_constraintRight_toRightOf="@id/centralButton"
        app:layout_constraintTop_toTopOf="@id/outerCircle"
        app:layout_constraintVertical_bias="0.45"
        app:srcCompat="@drawable/icon6" />

    <ImageView
        android:id="@+id/bunny"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/bunny"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>